<%= render partial: 'tickets_from_file/style' %>
<div class="wrapper">

  <table>
    <tr>
      <th><%= label_tag "Номер" %></th>
      <% @header.each do |item| %>
        <th><%= label_tag t item %></th>
      <% end %>
    </tr>
    <%= form_tag tickets_from_file_create_task_path do %>
  <body>
    <% @tasks.each_with_index do |item, index| %>
      <tr>
        <td><%= label_tag "#{index + 1}." %></td>
        <td><%= select_tag "issues[#{item[:issue]}][tracker_id]", options_for_select(select_tracker, select_tracer_from_document(item[:tracker])) %></td>
        <td><%= text_field_tag "issues[#{item[:issue]}][subject]", item[:theme] %></td>
        <td><%= text_field_tag "issues[#{item[:issue]}][description]", item[:description] %></td>
        <td><%= select_tag "issues[#{item[:issue]}][assigned_to_id]", options_for_select(select_users, select_user_from_document(item[:assignet_to])) %></td>
        <td><%= text_field_tag "issues[#{item[:issue]}][custom][external_rate]", item[:external_rate] %></td>
        <td><%= text_field_tag "issues[#{item[:issue]}][custom][fix_estimate]", item[:fix_estimate] %></td>
        <td><%= select_tag "issues[#{item[:issue]}][custom][custom][project_lead]", options_for_select(select_project_lead, select_user_from_document(item[:project_lead])) %></td>
        <td><%= select_tag "issues[#{item[:issue]}][custom][art_manager]", options_for_select(select_art_manager, select_user_from_document(item[:art_manager])) %></td>
        <td><%= text_field_tag "issues[#{item[:issue]}][parent_task]", item[:parent_task] %></td>
        <td><%= date_field_tag "issues[#{item[:issue]}][due_date]", item[:dead_line] %></td>
        <td><%= text_field_tag "issues[#{item[:issue]}][estimated_hours]", item[:time_cost_estimation] %></td>
        <td><%= select_tag "issues[#{item[:issue]}][freelancer?]", options_for_select(YES_NO_CONST, item[:time_cost_estimation]) %></td>
      </tr>
    <% end %>
    </body>
      <%= hidden_field_tag "project", @project_id %>
      <td><%= submit_tag  'Создать', url: tickets_from_file_create_task_path %></td>
  <% end %>

  </table>
</div>
